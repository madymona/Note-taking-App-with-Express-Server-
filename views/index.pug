doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Note Taking App
    link(rel="stylesheet", href="/styles.css")
  body
    #app
      header.header
        img.logo(src="https://miro.medium.com/v2/resize:fit:1160/1*Xy0_AI0MfCZUHD2t7ElbHg@2x.jpeg", alt="Logo")
        h1 UpNote
      form.note-form#note-form
        input#note-title(type="text", name="title", placeholder="Title", required=true)
        textarea#note-content(name="content", placeholder="Content", required=true)
        select#note-category(name="category", required=true)
          option(value="", disabled=true, selected=true) Select Category
          option(value="Personal") Personal
          option(value="Work") Work
          option(value="Study") Study
          option(value="Ideas") Ideas
          option(value="Shopping") Shopping
          option(value="Travel") Travel
          option(value="Health") Health
          option(value="Finance") Finance
          option(value="Books") Books
          option(value="Events") Events
          option(value="Movies/TV Shows") Movies/TV Shows
          option(value="Contacts") Contacts
          option(value="Reminders") Reminders
        button(type="submit") Add Note
      .search-bar
        input#search-input(type="text", placeholder="Search notes...")
      .notes-list#notes-list

    template#note-template
      .note
        h2.note-title
        p.note-content
        div.note-category
        button.delete Delete
        button.pin Pin
        button.favorite Favorite

    script(src="/index.js")
